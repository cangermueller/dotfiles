[core]
	excludesfile = ~/.gitignore
[user]
	name = Christof Angermueller
	email = cangermueller@gmail.com
[color]
	ui = true
[pager]
	diff =
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[credential]
	helper = cache --timeout=86400
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[pull]
	rebase = false
